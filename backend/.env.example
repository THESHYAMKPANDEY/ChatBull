# Server Configuration
PORT=10000
NODE_ENV=development
HOST=0.0.0.0

# Database
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/chatbull?retryWrites=true&w=majority

# Authentication (Firebase)
# Paste the full JSON content of your service account key as a single line
FIREBASE_SERVICE_ACCOUNT_JSON={"type": "service_account", "project_id": "..."}

# Email OTP (SMTP)
APP_NAME=ChatBull
EMAIL_OTP_TTL_MINUTES=10
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=no-reply@example.com

# Media Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this

# Real-time Communication
SOCKET_URL=http://localhost:10000
TURN_SECRET=your_turn_server_secret

# CORS (comma-separated allowlist; leave empty to allow all)
CORS_ORIGINS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
