{
  "expo": {
    "name": "ChatBull",
    "slug": "chatbull",
    "scheme": "chatbull",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chatbull.app",
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.chatbull.app",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "notification": {
      "vapidPublicKey": "BPh_7-placeholder-key-for-development-only-replace-with-real-vapid-key-from-firebase"
    },
    "extra": {
      "eas": {
        "projectId": "475b8712-7d94-45bd-9a9f-1c5d25233283"
      }
    },
    "plugins": [
      "expo-font",
      "expo-localization",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends.",
          "cameraPermission": "The app accesses your camera to let you take photos and videos to share."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "The app accesses your microphone to let you send voice messages."
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "The app accesses your contacts to help you find friends."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow ChatBull to use Face ID for secure access."
        }
      ],
      "expo-notifications"
    ]
  }
}
